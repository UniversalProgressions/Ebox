{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
